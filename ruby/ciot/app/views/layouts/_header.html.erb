<div class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">Ciot</a>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Devices", devices_path %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li><%= link_to "Log Out", destroy_user_session_path, :method => :delete %></li>
        <% else %>
          <li><%= link_to "Sign Up", new_registration_path(:user) %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Log In <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <%= form_for(:user, url: user_session_path, :html => { :class => "login-dropdown" }) do |f| -%>
                <li>
                  <div class="control-group">
                    <%= f.label :login, :class => 'control-label' %>
                    <div class="controls">
                      <%= f.email_field :email, autofocus: true, :class => 'form-control' %>
                    </div>
                  </div>
                </li>
                <li>
                  <div class="control-group">
                    <%= f.label :password, :class => "control-label" %>
                    <div class="controls">
                      <%= f.password_field :password, :class => 'form-control' %>
                    </div>
                  </div>
                </li>
                <li>
                  <%= f.label :remember_me, :class => 'checkbox' do %>
                    <%= f.check_box :remember_me %>
                    Remember me
                  <% end %>
                </li>
                <li>
                  <%= f.submit "Sign in", :class => "btn btn-primary" %>
                </li>
              <% end -%>
            </ul>
          </li>
        <% end %>
      </ul>
    </div><!--/.nav-collapse -->
  </div><!--/.container-fluid -->
</div>